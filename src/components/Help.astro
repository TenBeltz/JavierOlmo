---
import { Image } from 'astro:assets';
import bannerLeftImage from '../../public/images/help/how-we-help-banner-left-tmp.webp';
import bannerRightImage from '../../public/images/help/how-we-help-banner-right-tmp.webp';
import Step from '../components/HelpStep.astro';

const steps = [
  { text: 'Conocer y entender tu situación'},
  { text: 'Te doy recursos y herramientas'},
  { text: 'Comunicación día a día. Tú entrenas, yo te preparo'},
  { text: 'Mejoras día a día'},
  { text: 'Te ayudo a ser regular en tu entrenamiento y a disfrutar del deporte'}
];
---

<section class="py-4 bg-white">
  <h2 class="px-6 md:px-24 py-8 text-4xl">
    <span class="font-bold text-electric-lime">¿Cómo</span>
    <span>te ayudamos?</span>
  </h2>
  <div class="flex gap-x-2 h-100">
    <div class="w-full md:w-11/12">
      <Image src={bannerLeftImage} alt="Banner" class="object-cover w-full h-full"/>
    </div>
    <div class="hidden md:block">
      <Image src={bannerRightImage} alt="Banner" class="object-cover w-full h-full"/>
    </div>
  </div>
  <div class="relative flex flex-col justify-around px-4 gap-y-4 md:flex-row bottom-6">
    {steps.map((step, index) => (
      <Step
        number={index + 1}
        text={step.text}
        key={index}
        isLastStep={index === steps.length - 1}
      />
    ))}
  </div>
</section>