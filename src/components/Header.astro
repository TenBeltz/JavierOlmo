---
import HeaderItem from "./HeaderItem.astro";
const headerElements = [
  {
    url: '/conoceme/',
    title: 'Conóceme'
  },
  {
    url: '/libreria-de-ejercicios/',
    title: 'Biblioteca de ejercicios'
  },
  {
    url: '/galeria/',
    title: 'Galería'
  }
];
---

<header class="w-full bg-black border-b lg:absolute lg:bottom-0 lg:bg-inherit lg:border-none">
  <nav>
    <ul class="flex flex-col w-full text-center lg:flex-row">
      {headerElements.map(element => (
        <HeaderItem url={element.url} title={element.title} />
      ))}
      <li class="flex-grow text-2xl font-bold text-white hover:shadow-header-element hover:cursor-pointer">
        <a href="/entrena-conmigo/" class="block py-6 h-full w-full">
          <span class="bg-electric-lime text-black p-4 rounded-full">Entrena conmigo</span>
        </a>
      </li>
    </ul>
  </nav>
</header>
