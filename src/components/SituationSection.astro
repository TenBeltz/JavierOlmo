---
import SituationCard from "./SituationCard.astro";

import image1 from '../../public/images/situations/image1.jpeg';
import image2 from '../../public/images/situations/image2.jpeg';
import image3 from '../../public/images/situations/image3.jpeg';
import image4 from '../../public/images/situations/image4.jpeg';
import image5 from '../../public/images/situations/image5.jpeg';
import image6 from '../../public/images/situations/image6.jpeg';

const images = [image1, image2, image3, image4, image5, image6];

const situations = [
  {
    title: 'Alcanza tu potencial',
    description: 'Supera tus limitaciones y alcanza tu máximo nivel con nuestro plan individualizado.',
    image: images[0]
  },
  {
    title: '¿Te lesionas con facilidad?',
    description: 'Reduce lesiones y aumenta tus capacidades con un programa personalizado.',
    image: images[1]
  },
  {
    title: 'Llega al 100%',
    description: 'Maximiza tu rendimiento y da lo mejor de ti cada día.',
    image: images[2]
  },
  {
    title: 'Confía en los expertos',
    description: 'Trabaja con profesionales de confianza que complementen tu entrenamiento diario.',
    image: images[3]
  },
  {
    title: 'Recupera tu chispa',
    description: 'Recupera tu energía y entusiasmo en el campo con nuestro plan de entrenamiento.',
    image: images[4]
  },
  {
    title: 'Sé más rápido',
    description: 'Que nada ni nadie te detenga. Te sentirás más seguro, ágil y fuerte.',
    image: images[5]
  }
];
---

<section class="flex flex-col p-6 mt-10 gap-y-16">
  <h2 class="text-4xl text-white">
    <strong class="text-electric-lime">¿Has vivido</strong>
    alguna de estas situaciones?
  </h2>
  <div class="grid grid-cols-1 gap-6 sm:mx-auto md:grid-cols-2 xl:grid-cols-3 sm:w-fit">
    {situations.map(situation => <SituationCard {...situation}/>)}
  </div>
</section>