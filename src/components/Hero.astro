---
import { Image } from 'astro:assets';
import backgroundImage from '../../public/images/hero-bg.png';
import Logo from '../../public/favicon.svg';
---

<section class="relative h-screen bg-no-repeat bg-cover">
  <Image src={backgroundImage} alt="Imagen de fondo" class="absolute inset-0 w-full h-full object-cover"/>
  <div class="flex flex-col lg:flex-row items-center justify-center h-full">
    <a href="/" class="z-10">
      <Image src={Logo} alt="Logo" class="w-96 z-10"/>
    </a>
    <h1 class="w-10/12 text-4xl font-bold text-white sm:text-5xl md:w-8/12 lg:w-4/12 z-10">
      <slot />
    </h1>
  </div>
</section>