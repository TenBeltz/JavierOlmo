--- 
const { number, isLastStep } = Astro.props;
---

<div class="flex flex-col items-center w-48">
  <div class={`relative z-10 flex items-center justify-center w-20 h-20 text-5xl font-bold text-white rounded-full ${isLastStep ? 'bg-lime-zest' : 'bg-black'}`}>
    <span>{number}</span>
    {!isLastStep && (
      <span class="absolute -z-10 bg-black border-2 border-black top-10 w-[20vw] left-10"></span>
    )}
  </div>
</div>