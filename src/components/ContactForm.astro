<section class="w-full h-full flex flex-col justify-center items-center">
    <h2 id="contact-form-section" class="text-4xl text-center font-semibold text-white">Formulario de contacto</h2>
    <div class="w-full lg:p-5 flex flex-col-reverse lg:flex-row justify-center items-center">
        <!-- Contenedor del formulario -->
        <div id="contactFormContainer" class="w-full h-full mx-2 lg:mx-0 flex flex-col-reverse lg:flex-row justify-center items-center">
            <div class="w-full lg:w-1/3 h-full flex flex-col gap-5">
                <div class="flex flex-col gap-2">
                    <label for="name" class="text-white">Nombre Completo</label>
                    <input type="text" name="name" id="name" class="p-2 rounded-md" />
                </div>
                <div class="flex flex-col gap-2">
                    <label for="email" class="text-white">Email</label>
                    <input type="email" name="email" id="email" class="p-2 rounded-md" />
                </div>
                <div class="flex flex-col gap-2">
                    <label for="phone" class="text-white">Móvil</label>
                    <input type="tel" name="phone" id="phone" class="p-2 rounded-md" />
                </div>
                <div class="flex flex-col w-1/2 lg:flex-row gap-2">
                    <div class="flex flex-col gap-2">
                        <label for="country" class="text-white">País</label>
                        <input type="text" name="country" id="country" class="p-2 rounded-md" />
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="city" class="text-white">Ciudad</label>
                        <input type="text" name="city" id="city" class="p-2 rounded-md" />
                    </div>
                </div>
                <div class="flex flex-col gap-2">
                    <label for="message" class="text-white">Mensaje (opcional)</label>
                    <textarea name="message" id="message" class="p-2 rounded-md" placeholder="Aquí puedes contarme el deporte que practicas y qué estás buscando, te contestaré lo antes posible"></textarea>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <input type="checkbox" name="accept" id="accept" class="p-2 rounded-md" />
                    <label for="accept" class="text-white">He leído y acepto el <a href="#">aviso legal</a> y la <a href="#">política de privacidad</a></label>
                </div>
                <button id="submitButton" class="bg-electric-lime text-black p-2 rounded-md">Enviar</button>
            </div>
            <div class="w-full lg:w-1/3 h-full text-white mt-4 lg:mt-0 lg:ml-5">
                <h3 class="text-electric-lime font-bold text-4xl">Servicio</h3>
                <select name="service" id="service" class="w-full bg-white text-black py-2 rounded-lg">
                    <option value="Ninguno">Ninguno</option>
                    <option value="Supreme">Supreme</option>
                    <option value="Élite">Élite</option>
                    <option value="Excellence">Excellence</option>
                    <option value="Platinum">Platinum</option>
                    <option value="Mentoria">Mentoría</option>
                </select>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('submitButton').addEventListener('click', function() {
        // Captura los datos del formulario
        const formData = new FormData();
        formData.append('name', document.getElementById('name').value);
        formData.append('email', document.getElementById('email').value);
        formData.append('phone', document.getElementById('phone').value);
        formData.append('country', document.getElementById('country').value);
        formData.append('city', document.getElementById('city').value);
        formData.append('message', document.getElementById('message').value);
        formData.append('service', document.getElementById('service').value);

        const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            phone: formData.get('phone'),
            country: formData.get('country'),
            city: formData.get('city'),
            message: formData.get('message'),
            service: formData.get('service')
        };

        // Realiza una solicitud POST con los datos en formato JSON
        fetch('https://www.padelchiquito.com/api/jolmo/form/', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
        .then(response => response.json())
        .then(data => {
            console.log('Éxito:', data);
            alert('Formulario enviado con éxito.');
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('Error al enviar el formulario.');
        });
    });
</script>
