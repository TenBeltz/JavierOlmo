---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ExerciseLibrary from '../components/ExerciseLibrary.astro';
---

<Layout 
  description="Javier Olmo" 
  title="Javier Olmo"
>
  <main class="text-black">
    <Hero>
      Especialista en
      <strong class="text-electric-lime">preparación física</strong>
      de élite y
      <strong class="text-electric-lime">readaptación de lesiones</strong>
    </Hero>
    <Header/>
    <section class="mx-auto max-w-7xl">
      <h2 class="py-6 text-3xl font-bold text-center text-white">Biblioteca de ejercicios</h2>
      <ExerciseLibrary />
    </section>
	</main>
  <Footer />
</Layout>